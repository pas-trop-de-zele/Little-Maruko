<%- include("./partials/header") %>
<div class="container">
    <div class="row">
        <% teas.forEach(tea => { %>
            <div class="col-4">
                <h3><%= tea.name %> </h3>
                <img class="img-fluid" src=<%= tea.image%> alt="">
                <h3><%= tea.description %> </h3>
                <h3>$<%= tea.price %> </h3>
                <a class="btn btn-warning float-left mr-3" href="/teas/<%= tea._id %>/edit">Edit</a>
                <form action="/teas/<%= tea._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        <% }) %> 
            
    </div>
   
</div>
<%- include("./partials/footer") %>
