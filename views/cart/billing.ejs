<%- include("../partials/header") %>

<div class="mt-5 container">
    <div class="row">
        <div class="col-md-4 order-md-2">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your cart</span>
                <span class="badge badge-secondary badge-pill">3</span>
            </h4>
            <ul class="list-group mb-3">
                <% teasInCart.forEach((cartSlot) => { %> 
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0"><%= cartSlot.item.name %></h6>
                            <small class="text-muted">Price: <%= cartSlot.item.price %></small>
                            <br>
                            <small class="text-muted">Subtotal (<%= cartSlot.qty %> 
                                <% if (cartSlot.qty > 1) { %>
                                    items 
                                <% } else { %>
                                    item
                                <% } %>)
                            </small>
                        </div>
                        <span class="text-muted">$<%= cartSlot.price %></span>
                    </li>
                <% }) %> 
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (USD)</span>
                    <strong>$<%= cart.totalPrice %> </strong>
                  </li>
            </ul>
        </div>
        
        <div class="col-md-8 order-md-1">
            <h4>Pick up info</h4>
            <form action="/checkout" method="POST">
                <div class="mb-3">
                    <label for="name">Name</label>
                    <input required id="name" name="name" type="text" class="form-control" placeholder="John">
                </div>
                <div class="mb-3">
                    <label for="phone">Phone</label>
                    <input required id="phone" name="phone" type="text"  maxlength="10" class="form-control" placeholder="1234567899">
                </div>
                <div class="mb-3">
                    <label for="date">Pick up date</label>
                    <input required id="date" name="date" type="date" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="time">Pick up time</label>
                    <input required id="time" name="time" type="time" class="form-control">
                </div>
                <button class="btn btn-primary" type="submit">Checkout</button>
            </form>
        </div>
            
              
    </div>
</div>

<%- include("../partials/footer") %>
