<%- include("./partials/header") %>
<h1 class="display-5 text-center mt-5">Edit Product</h1>

<form action="/teas/<%= tea._id %>?_method=PUT" method="POST">
    <div class="form-group row justify-content-center">
        <div class="col-7">
            <input name="updatedTea[name]" nametype="text" class="form-control" id="teaName" placeholder="Name" value="<%= tea.name %>">
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-7">
            <input name="updatedTea[image]" type="text" class="form-control" id="image" placeholder="Image URL" value="<%= tea.image %>">
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-7">
            <textarea name="updatedTea[description]" class="form-control" id="description" placeholder="Description" rows="4"><%= tea.description %></textarea>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-7">
            <input name="updatedTea[price]" type="number" class="form-control" id="price" placeholder="Price" value="<%= tea.price %>">
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-7 text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
    
</form>
<%- include("./partials/footer") %>
